<% layout('layouts/boilerplate') %>
<div class="row">
  <!-- offset is used to make form at center by taking 3 part from each side of row -->
  <div class="col-6 offset-3">
    <h1 class="text-center">New Campground</h1>
    <form method="post" action="/campgrounds"  class="validated-form"  novalidate enctype="multipart/form-data" >   <!--boolean attribute -->
      <div class="mb-3">
        <label for="title" class="form-label">Title : </label>
        <input
          type="text"
          class="form-control"
          name="campground[title]"
          id="title"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please fill Camp Name
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location : </label>
        <input
          type="text"
          name="campground[location]"
          id="location"
          class="form-control"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please fill up location
        </div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image URL : </label>
        <!--the name attribute in image part has value image not campround[image] as using multer it will not go in req.body it will go in req.files-->
        <input
          type="file"
          name="image"  
          id="image"
          class="form-control"
          required
          multiple
        />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please fill up image URL
        </div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Amount : </label>
        <div class="input-group">
          <span class="input-group-text" id="amount">$</span>
          <input
            id="price"
            name="campground[price]"
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="Price"
            aria-describedby="amount"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please fill up Amount
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description : </label>
        <textarea
          type="text"
          name="campground[description]"
          id="description"
          class="form-control"
          row="30" col="10"
          required
        ></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please fill up Description of Camp
        </div>
      </div>
      <button class="btn btn-success">Add Campground</button>
    </form>
    <a href="/campgrounds">All Campground</a>
  </div>
</div>