<% layout('layouts/boilerplate') %>
<div class="row">
  <!-- offset is used to make form at center by taking 3 part from each side of row -->
  <div class="col-6 offset-3">
    <h1 class="text-center">New Campground</h1>
    <form method="post" action="/campgrounds">
      <div class="mb-3">
        <label for="title" class="form-label">Title : </label>
        <input
          type="text"
          class="form-control"
          name="campground[title]"
          id="title"
        />
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location : </label>
        <input
          type="text"
          name="campground[location]"
          id="location"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image URL : </label>
        <input
          type="text"
          name="campground[image]"
          id="image"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Amount : </label>
        <div class="input-group">
          <span class="input-group-text" id="amount">$</span>
          <input
            id="price"
            name="campground[price]"
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="Price"
            aria-describedby="amount"
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description : </label>
        <textarea
          type="text"
          name="campground[description]"
          id="description"
          class="form-control"
          row="30" col="10"
        ></textarea>
      </div>
      <button class="btn btn-success">Add Campground</button>
    </form>
    <a href="/campgrounds">All Campground</a>
  </div>
</div>

