<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
          <h1 class="text-center">Edit Campground</h1>
          <form method="post" action="/campgrounds/<%= campground._id %>?_method=PUT">
            <div class="mb-3">
              <label for="title" class="form-label">Title : </label>
              <input
                type="text"
                class="form-control"
                name="campground[title]"
                id="title"
                value="<%= campground.title %>"
              />
            </div>
            <div class="mb-3">
              <label for="location" class="form-label">Location : </label>
              <input
                type="text"
                name="campground[location]"
                id="location"
                class="form-control"
                value="<%= campground.location %>"
              />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Image URL : </label>
              <input
                type="text"
                name="campground[image]"
                id="image"
                class="form-control"
                value="<%= campground.image %>"
              />
            </div>
            <div class="mb-3">
              <label for="price" class="form-label">Amount : </label>
              <div class="input-group">
                <span class="input-group-text" id="amount">$</span>
                <input
                  id="price"
                  name="campground[price]"
                  type="text"
                  class="form-control"
                  placeholder="0.00"
                  aria-label="Price"
                  aria-describedby="amount"
                  value="<%= campground.price %>"
                />
              </div>
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description : </label>
              <textarea
                type="text"
                name="campground[description]"
                id="description"
                class="form-control"
                row="30" col="10"
              ><%= campground.description %></textarea>
            </div>
            <button class="btn btn-success">Save Changes</button>
          </form>
          <a href="/campgrounds">All Campground</a>
        </div>
      </div>
      