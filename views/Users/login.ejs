<% layout('layouts/boilerplate') %>

<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
 <div class="card shadow">
  <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80" alt="campImage">
  <div class="card-body">
    <h5 class="card-title">Login</h5>
<form method="post" action="/login" class="validated-form" novalidate>
  <div class="mb-3">
    <label for="username" class="form-label">Username : </label>
    <input
      type="text"
      class="form-control"
      name="username"
      id="username"
      required
      autofocus
    />
    <!-- autofocus binary attribute of input to automatically put text cursor on input -->
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please fill Username
    </div>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password : </label>
    <input
      type="password"
      class="form-control"
      name="password"
      id="password"
      required
    />
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please fill Password
    </div>
  </div>
  <div class="mb-3 d-grid">
    <button type="submit" class="btn btn-success">Login</button>
  </div>
</form>
</div>
</div>
</div>

